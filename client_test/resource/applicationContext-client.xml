<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	        http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml"/>
	<import resource="classpath:META-INF/cxf/cxf-extension-soap.xml"/>
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>

	<bean id="inMessageInterceptor" class="interceptors.HeaderIntercepter">
		<property name="qname" value="http://localhost:8081/springmvc_cfx/services/hw" />
	</bean>

	<jaxws:client id="userWsClient" serviceClass="service.HelloWorld"
				  address="http://localhost:8081/springmvc_cfx/services/hw">
		<jaxws:inInterceptors>
			<bean class="org.apache.cxf.interceptor.LoggingInInterceptor"/>
			<bean class="interceptors.SampleInterceptor"/>
		</jaxws:inInterceptors>
		<jaxws:outInterceptors>
			<!--<bean class="com.benben.Interceptor.HeaderIntercepter"/>-->
			<!--<bean class="org.apache.cxf.interceptor.LoggingOutInterceptor"/>-->
			<ref bean="inMessageInterceptor" />
		</jaxws:outInterceptors>

	</jaxws:client>
</beans>

